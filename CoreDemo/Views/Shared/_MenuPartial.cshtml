@using Microsoft.AspNetCore.Identity
@using CoreDemo.Models
@using Microsoft.Extensions.Options

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IOptions<AppSettings> settings

@if (SignInManager.IsSignedIn(User) && User.IsInRole(settings.Value.AdminRole))
{
<ul class="nav navbar-nav">
    <li><a asp-area="" asp-controller="User" asp-action="Index">Users</a></li>
    <li><a asp-area="" asp-controller="Log" asp-action="Index">Event Log</a></li>
    <li><a asp-area="" asp-controller="Composer" asp-action="Index">Composers</a></li>
</ul>
}
else if(SignInManager.IsSignedIn(User) && User.IsInRole(settings.Value.DatabaseRole))
{
<ul class="nav navbar-nav">
    <li><a asp-area="" asp-controller="Composer" asp-action="Index">Composers</a></li>
 </ul>
}

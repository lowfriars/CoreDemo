@model IEnumerable<Works>

    <tr>
        <th>Title</th>
        <th>Year of Composition</th>
        <th>Description</th>
        <th></th>
    </tr>
    @foreach (Works item in Model)
    {
        <tr>
            <td>
                <a asp-controller="Work" asp-action="Change" asp-route-id="@item.Id" asp-route-composername="@ViewBag.ComposerName">
                    @Html.DisplayFor(modelItem => item.Title)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfComposition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a class="btn btn-danger" asp-controller="Work" asp-action="Delete" asp-route-id="@item.Id" asp-route-composername="@ViewBag.ComposerName">Delete</a>
            </td>
        </tr>
    }
    <tr>
        <td colspan="3"></td>
        <td>
            <a class="btn btn-primary" asp-controller="Work" asp-action="Create" asp-route-composerid="@ViewBag.ComposerId" asp-route-composername="@ViewBag.ComposerName">New Work</a>
        </td>
        <td></td>
    </tr>
